	$('#save-task-btn').fadeOut('fast');
});

$(document).on("click", ".item-timer:not(.editing)", function(event){
	$(this).addClass('editing');
	$(this).html($('.time-select-container'));
	$('.time-select-container').show();
});

$(document).on("click", ".fa-times-circle", function(event){
	$(this).parent().parent().removeClass('editing');
	$('.time-select-container').hide();
	$("body").append($('.time-select-container'));
	dailyItem.updateItemsTime();
});

$(document).on("change", "#time-select", function(event){
	var $liElem = $(this).parent().parent().parent();
	var itemId = $liElem.attr('data-id');
	var timer = $(this).val();

	if(timer != "") {
		$.each(dailyItem.items, function(index, value) {
			if(itemId == value.id) {
				if(dailyItem.items[index].start) {
					dailyItem.items[index].start = "";
				}
				dailyItem.items[index].timer = timer;
			}
		});

		dailyItem.save();
	}

	$(this).parent().parent().removeClass('editing');
	
	$('.time-select-container').hide();
	$("body").append($('.time-select-container'));
	$('#time-select').val("");
	dailyItem.updateItemsTime();
});

$(document).on("dblclick", "#backlog label", function(event){
	var input = $(this).parent('div.view').parent('li').addClass('editing').children('form#editBacklogItemForm').find('.edit');
	var val = input.val();

	input.val(val).focus();
	return false;
});

