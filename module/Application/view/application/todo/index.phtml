	startTime : function(id) {
		var now_ms = new Date().getTime();

		var thisObj = this;
		//console.log(id,completed);
		$.each(this.items, function(index, value) {
			//console.log(id,value.id);
			if(id == value.id) {
				thisObj.items[index].start = now_ms;
				thisObj.save();
				$('#timer-'+id).hide();
			}
		});
	},
	stopTime : function(id) {
		var now_ms = new Date().getTime();

		var thisObj = this;
		$.each(this.items, function(index, value) {
			//console.log(id,value.id);
			if(id == value.id) {
				if(thisObj.items[index].timer) {
					thisObj.items[index].timer = parseInt(thisObj.items[index].timer) + (now_ms - parseInt(thisObj.items[index].start));
				} else {
					thisObj.items[index].timer = now_ms - parseInt(thisObj.items[index].start);
				}
				$('#timer-'+id).show();
				thisObj.items[index].start = "";
				thisObj.getItemTime(thisObj.items[index].timer);
				thisObj.save();
			}
		});

		thisObj.updateItemsTime();
	},
	getItemTime : function(ms) {
		return msToTime(ms);
	},
	updateItemsTime : function() {
		var thisObj = this;
		$.each(this.items, function(index, value) {
			if(thisObj.items[index].timer) {
				$('#timer-'+thisObj.items[index].id).html(thisObj.getItemTime(thisObj.items[index].timer) + " hs");
			} else {
				$('#timer-'+thisObj.items[index].id).html("<i class='fa fa-clock-o'></i>");
			}
		});
	}
